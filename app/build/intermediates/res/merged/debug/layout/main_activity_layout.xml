<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/menu_button">

        <Button
            android:id="@+id/btnDisplayMenu"
            style="@style/menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_button"
            android:onClick="someButtonClicked"
            android:text="| | |" />
     <!--   <Button
            android:background="@drawable/red_button"
            android:id="@+id/button1"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="test"
            style="@style/button_text" />
-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#3470f1"
                android:textStyle="bold"
                android:text="@string/app_name"
                android:textSize="30sp" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/LayoutMenu1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="enter text:"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/txtContentToSend"
                    android:layout_width="150dp"
                    android:layout_height="40dp" />
            </LinearLayout>

            <Button
                android:id="@+id/btnSendToClient"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:onClick="someButtonClicked"
                android:text="Send" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="178dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/txtInputFromClient"
                    android:layout_width="200dp"
                    android:layout_height="198dp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LayoutMenu2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/titleMenu2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/TitleMenu2"
                style="@style/menu_title_text"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LayoutMenu3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/titleMenu3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/TitleMenu3"
                style="@style/menu_title_text"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LayoutMenu4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/titleMenu4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/TitleMenu4"
                style="@style/menu_title_text"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LayoutMenu5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/titleMenu5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/TitleMenu5"
                style="@style/menu_title_text"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LayoutMenu6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/titleMenu6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/TitleMenu6"
                style="@style/menu_title_text"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LayoutMenu7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/titleMenu7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/TitleMenu7"
                style="@style/menu_title_text" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/workarea7_item1_name"
                        style="@style/workarea_item_name"/>
                    <TextView
                        android:id="@+id/workarea7Item1Value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0.0.0"
                        style="@style/workarea_item_value"/>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LayoutMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:visibility="visible"
            android:background="@drawable/menu_left_button">


            <Button
                android:id="@+id/leftButton1"
                android:text="@string/LeftMenuBtn1"
                style="@style/left_menu_button"/>

            <Button
                android:id="@+id/leftButton2"
                android:text="@string/LeftMenuBtn2"
                style="@style/left_menu_button"/>

            <Button
                android:id="@+id/leftButton3"
                android:text="@string/LeftMenuBtn3"
                style="@style/left_menu_button" />

            <Button
                android:id="@+id/leftButton4"
                android:text="@string/LeftMenuBtn4"
                style="@style/left_menu_button" />

            <Button
                android:id="@+id/leftButton5"
                android:text="@string/LeftMenuBtn5"
                style="@style/left_menu_button" />

            <Button
                android:id="@+id/leftButton6"
                android:text="@string/LeftMenuBtn6"
                style="@style/left_menu_button" />

            <Button
                android:id="@+id/leftButton7"
                android:text="@string/LeftMenuBtn7"
                style="@style/left_menu_button" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>